{
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "ES2022",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "module": "es2022",
    "sourceMap": true,
    "types": ["node"],
    "preserveConstEnums": true,
    "plugins": [
      {
        "name": "tslint-language-service",
        "alwaysShowRuleFailuresAsWarnings": true,
        "ignoreDefinitionFiles": true
      }
    ]
  },
  "outDir": "dist",
  "include": ["./src/**/*.*"],
  "exclude": ["dist", "node_modules", "reports", ".jest"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}